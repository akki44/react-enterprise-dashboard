{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting - Strict Mode */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        /* Path Aliases for Clean Imports */
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/app/*": [
                "src/app/*"
            ],
            "@/features/*": [
                "src/features/*"
            ],
            "@/components/*": [
                "src/components/*"
            ],
            "@/hooks/*": [
                "src/hooks/*"
            ],
            "@/services/*": [
                "src/services/*"
            ],
            "@/store/*": [
                "src/store/*"
            ],
            "@/routes/*": [
                "src/routes/*"
            ],
            "@/utils/*": [
                "src/utils/*"
            ],
            "@/types/*": [
                "src/types/*"
            ],
            "@/assets/*": [
                "src/assets/*"
            ],
            "@/styles/*": [
                "src/styles/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}